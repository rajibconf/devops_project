# docker-website-lab/Dockerfile
FROM nginx:alpine

LABEL maintainer="rajib.conf@gmail.com"
LABEL version="1.0"
LABEL description="Nginx static site for clean_work"

# Remove default nginx content and copy your site
RUN rm -rf /usr/share/nginx/html/*
COPY clean_work/ /usr/share/nginx/html/

# Optional: add a simple healthcheck
HEALTHCHECK --interval=30s --timeout=3s --retries=3 CMD wget -qO- --spider http://127.0.0.1/ || exit 1

EXPOSE 80

# Run nginx in foreground (official image default)
CMD ["nginx", "-g", "daemon off;"]
