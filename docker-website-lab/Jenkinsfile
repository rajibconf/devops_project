pipeline {
    agent any

    environment {
        IMAGE_NAME = 'rajibconf/clean_work'
        IMAGE_TAG = "${env.BUILD_NUMBER}"
        IMAGE_TAG2 = "latest"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/rajibconf/devops_project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $IMAGE_NAME:$IMAGE_TAG .'
                sh 'docker build -t $IMAGE_NAME:$IMAGE_TAG2 .'
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-hub-cred', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    sh """
                        echo "$PASSWORD" | docker login -u "$USERNAME" --password-stdin
                        docker push $IMAGE_NAME:$IMAGE_TAG
                        docker push $IMAGE_NAME:$IMAGE_TAG2
                    """
                }
            }
        }

        stage('Deploy Container') {
            steps {
                sh """
                    docker stop clean_work || true
                    docker rm clean_work || true
                    docker run -d --name clean_work -p 80:3000 $IMAGE_NAME:$IMAGE_TAG
                """
            }
        }
    }
}
